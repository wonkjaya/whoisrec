<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

        <EditTextPreference 
            android:title="Host" 
            android:key="prefHost" 
            android:summary="Enter Host"
            android:defaultValue="192.168.100.215:88" 
            />
        <EditTextPreference
            android:key="prefNoTelp"
            android:summary="@string/pref_user_name_summary"
            android:title="@string/pref_user_name" />
        <EditTextPreference
            android:key="prefKey"
            android:password="true"
            android:summary="Enter your Key"
            android:title="Key" />

        <Preference
            android:key=""
            android:summary=""
            android:title="" >
        </Preference>
        

</PreferenceScreen>